
docker run \
    -p <<SERVICE LOCALHOST PORT>>:80 \
    --name <<SERVICE NAME>> \
    # host.docker.internal points to the pc localhost
    --add-host=host.docker.internal:host-gateway \
    -e FRONTEND_URL='http://host.docker.internal:<<FE PORT>>' \
    -e ASPNETCORE_ENVIRONMENT='Production' \
    # database connection string if the database is hosted on another docker container
    -e DATABASE_CONN_STRING='server=host.docker.internal;port=<<LOCALHOST_DB_PORT>>;database=<<DB_NAME>>;user=<<user_name>>;password=<<PASSWORD>>;persistsecurityinfo=True' \
    -e ENV_NAME='<<NAME OF THE ENVIRONMENT, WILL BE PRINTEND FOR DEBUG>>' \
    <<IMAGE ID>>